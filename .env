# =============================================================================
# OPTIONAL - KYC CONFIGURATION
# =============================================================================
# KYC provider (local, kycaid)
KYC_PROVIDER=local

# KYCAID configuration (if using KYCAID provider)
KYC_AUTHORIZATION_TOKEN=changeme
KYC_SANDBOX_MODE=true
KYC_API_ENDPOINT=https://api.kycaid.com/

# =============================================================================
# OPTIONAL - CAPTCHA CONFIGURATION
# =============================================================================
# Captcha type (none, recaptcha, geetest)
CAPTCHA_TYPE=none

# reCAPTCHA configuration (if using reCAPTCHA)
CAPTCHA_SITE_KEY=your-recaptcha-site-key
CAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# =============================================================================
# OPTIONAL - TWILIO SMS CONFIGURATION
# =============================================================================
# Twilio SMS service (disabled by default)
TWILIO_ENABLED=false
TWILIO_PHONE_NUMBER=+15005550000
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# =============================================================================
# OPTIONAL - CRYPTONODE CONFIGURATION
# =============================================================================
# Parity (Ethereum) node configuration
PARITY_NETWORK=mainnet
PARITY_RPC_PORT=8545
PARITY_PORT=30303

# Bitcoin Core configuration
BITCOIND_ENABLED=false
BITCOIND_RPC_USER=admin
BITCOIND_RPC_PASSWORD=your-bitcoin-rpc-password
BITCOIND_NETWORK=mainnet
BITCOIND_RPC_PORT=8332
BITCOIND_PORT=8333

# Litecoin configuration
LITECOIND_RPC_USER=admin
LITECOIND_RPC_PASSWORD=your-litecoin-rpc-password
LITECOIND_NETWORK=mainnet
LITECOIND_RPC_PORT=9332
LITECOIND_PORT=9333

# =============================================================================
# OPTIONAL - MONITORING & ANALYTICS
# =============================================================================
# Google Analytics tracking key
GA_TRACKER_KEY=your-google-analytics-key

# =============================================================================
# OPTIONAL - FEATURE FLAGS
# =============================================================================
# Enable/disable features
CSRF_ENABLED=false
SSL_ENABLED=true
SHOW_LANDING=true
RENDER_PROTECT=false

# =============================================================================
# OPTIONAL - APPLICATION CONFIGURATION
# =============================================================================
# Application name
APP_NAME=CivicForge

# Log level (debug, info, warn, error)
LOG_LEVEL=warn

# Rails environment
RAILS_ENV=production

# =============================================================================
# OPTIONAL - TRADING CONFIGURATION
# =============================================================================
# Minimum member levels for different operations
MINIMUM_MEMBER_LEVEL_FOR_DEPOSIT=1
MINIMUM_MEMBER_LEVEL_FOR_WITHDRAW=3
MINIMUM_MEMBER_LEVEL_FOR_TRADING=2

# =============================================================================
# OPTIONAL - PASSWORD POLICY
# =============================================================================
# Password requirements
PASSWORD_MIN_ENTROPY=14
PASSWORD_USE_DICTIONARY=false

# =============================================================================
# OPTIONAL - LANGUAGE & LOCALIZATION
# =============================================================================
# Default language
DEFAULT_LANGUAGE=en

# =============================================================================
# OPTIONAL - FINEX ENGINE (Advanced Trading)
# =============================================================================
# Finex engine configuration (disabled by default)
FINEX_ENABLED=false
FINEX_LICENSE_KEY=changeme

# =============================================================================
# OPTIONAL - TERRAFORM CONFIGURATION (Infrastructure)
# =============================================================================
# Terraform configuration for cloud deployment
TERRAFORM_CREDENTIALS=~/safe/opendax.json
TERRAFORM_PROJECT=example-opendax
TERRAFORM_REGION=europe-west4
TERRAFORM_ZONE=europe-west4-a
TERRAFORM_INSTANCE_NAME=opendax-cloud
TERRAFORM_MACHINE_TYPE=n1-standard-4
TERRAFORM_IMAGE=debian-cloud/debian-9
